<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/two"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="184dp"
        android:text="2"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="@+id/five"
        app:layout_constraintStart_toStartOf="@+id/five"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eight"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="70dp"
        android:text="8"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/two" />

    <TextView
        android:id="@+id/one"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="1"
        android:textSize="24dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/two"
        app:layout_constraintEnd_toEndOf="@+id/four"
        app:layout_constraintStart_toStartOf="@+id/four" />

    <TextView
        android:id="@+id/nine"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="23dp"
        android:text="9"
        android:textSize="24dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/eight"
        app:layout_constraintStart_toEndOf="@+id/eight" />

    <TextView
        android:id="@+id/five"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="47dp"
        android:text="5"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/eight"
        app:layout_constraintEnd_toEndOf="@+id/eight"
        app:layout_constraintStart_toStartOf="@+id/eight"
        app:layout_constraintTop_toTopOf="@+id/two" />

    <TextView
        android:id="@+id/seven"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="51dp"
        android:layout_marginEnd="51dp"
        android:text="7"
        android:textSize="24dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/eight"
        app:layout_constraintEnd_toEndOf="@+id/eight"
        app:layout_constraintStart_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/six"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="6"
        android:textSize="24dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/five"
        app:layout_constraintEnd_toEndOf="@+id/nine"
        app:layout_constraintStart_toStartOf="@+id/nine" />

    <TextView
        android:id="@+id/three"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="3"
        android:textSize="24dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/two"
        app:layout_constraintEnd_toEndOf="@+id/six"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/six" />

    <TextView
        android:id="@+id/four"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:text="4"
        android:textSize="24dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/five"
        app:layout_constraintEnd_toEndOf="@+id/seven"
        app:layout_constraintStart_toStartOf="@+id/seven" />

    <TextView
        android:id="@+id/CoinLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="20dp"
        android:text="100"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:text="ქულები - "
        app:layout_constraintBaseline_toBaselineOf="@+id/CoinLabel"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="85dp"
        android:onClick="onClick"
        android:text="დაწყება"
        app:layout_constraintBottom_toTopOf="@+id/four"
        app:layout_constraintStart_toStartOf="@+id/NumberText"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <EditText
        android:id="@+id/NumberText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:hint="ციფრი"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="@+id/CoinLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

</androidx.constraintlayout.widget.ConstraintLayout>